-# frozen_string_literal: true
= simple_form_for(@task) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :description
    = f.input :due_date
    = f.association :category
    
    #addParticipants
      = link_to_add_association 'Agregar participante', f, :participations, class: 'btn btn-primary', data: { association_insertion_node: '.participants-container', association_insertion_method: 'append' }
    
    .participants-container
      = f.simple_fields_for :participations do |g|
        = render 'participation_fields', f: g
      
  .form-actions
    = f.button :submit