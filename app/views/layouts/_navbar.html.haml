%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.mb-4
  .container
    = link_to root_path, class: 'navbar-brand fw-bold' do
      %i.fas.fa-briefcase.me-2
      BukTasks
    
    %button.navbar-toggler{ type: "button", "data-bs-toggle": "collapse", "data-bs-target": "#navbarNav" }
      %span.navbar-toggler-icon

    #navbarNav.collapse.navbar-collapse
      %ul.navbar-nav.ms-auto
        %li.nav-item= link_to 'Tareas', tasks_path, class: 'nav-link'
        %li.nav-item= link_to 'Categorías', categories_path, class: 'nav-link'
        
        - if user_signed_in?
          .dropdown.ms-lg-3
            %a#userDrop.nav-link.dropdown-toggle.text-white{ role: "button", "data-bs-toggle": "dropdown" }
              = image_tag "https://robohash.org/#{current_user.email}?size=30x30", class: "rounded-circle border me-1"
              = current_user.email.split('@').first
            %ul.dropdown-menu.dropdown-menu-end
              %li
                = link_to destroy_user_session_path, data: { turbo_method: :delete }, class: 'dropdown-item text-danger' do
                  %i.fas.fa-sign-out-alt.me-2
                  Cerrar Sesión
        - else
          .ms-lg-3
            = link_to "Iniciar Sesión", new_user_session_path, class: "nav-link text-white"